{
  "name": "dkmv-extension",
  "displayName": "DKMV Analyzer",
  "description": "AI code review & improvement inside VS Code (DKMV).",
  "version": "0.0.3",
  "publisher": "TBADKMV",
  "license": "MIT",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ai",
    "code-review",
    "refactor",
    "vscode-extension"
  ],
  "icon": "media/logo.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:dkmv.analyzeSelection"
  ],
  "contributes": {
    "commands": [
      {
        "command": "dkmv.analyzeSelection",
        "title": "DKMV: Analyze Selected Code"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/<owner>/<repo>.git"
  },
  "bugs": {
    "url": "https://github.com/<owner>/<repo>/issues"
  },
  "homepage": "https://github.com/<owner>/<repo>#readme",
  "scripts": {
    "dev": "vite",
    "build:extension": "tsc -p tsconfig.extension.json",
    "build:webview": "vite build",
    "build": "npm run build:extension && npm run build:webview",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true}); require('fs').rmSync('media/webview',{recursive:true,force:true});\"",
    "vsix:package": "npm run build && vsce package --no-dependencies",
    "vsix:publish": "npm run build && vsce publish"
  },
  "files": [
    "dist/**",
    "media/**",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/vscode": "^1.106.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vscode/vsce": "^2.26.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2"
  }
}
